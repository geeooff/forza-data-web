[*]
end_of_line = crlf
indent_style = space
indent_size = 4
tab_width = 4
charset = utf-8

[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2

[*.json]
indent_style = space
indent_size = 2
tab_width = 2

[*.{cs,csproj,cshtml,props,sln}]
indent_style = tab
charset = utf-8-bom

[*.{md}]
trim_trailing_whitespace = true
